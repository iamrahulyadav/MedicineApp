    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9e565656">-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/progress_hud_bg"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="25dp"
    android:paddingRight="30dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/spinnerImageView"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_centerVertical="true"
        android:background="@drawable/spinner"
        android:backgroundTint="#e6181818" />

    <TextView
        android:id="@+id/message"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@id/spinnerImageView"
        android:text="please wait"
        android:textColor="#e6181818" />

</RelativeLayout>
